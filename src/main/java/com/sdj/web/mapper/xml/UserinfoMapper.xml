<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdj.web.mapper.UserinfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sdj.web.entity.Userinfo">
        <id column="userid" property="userid" />
        <result column="username" property="username" />
        <result column="pwd" property="pwd" />
        <result column="role" property="role" />
    </resultMap>

    <select id="getUserInfo" resultType="com.sdj.web.entity.Userinfo">
        SELECT * FROM userinfo where userid='1'
    </select>
</mapper>
